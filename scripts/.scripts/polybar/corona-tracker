#/bin/sh

[ "$(stat -c %y ~/.cache/corona 2>/dev/null | awk -F ':' '{print $1}')" != "$(date '+%Y-%m-%d %H')" ] && 
curl -s https://corona-stats.online/pl?minimal=true | sed -r 's/\x1B\[([0-9]{1,3}((;[0-9]{1,3})*)?)?[m|K]//g' > ~/.cache/corona

